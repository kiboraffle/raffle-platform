# Production Environment Variables for Vercel Deployment
# Copy these to Vercel Environment Variables in your project settings

# Application
NODE_ENV=production
PORT=3000

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_for_production_min_32_chars
JWT_EXPIRE=7d

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY=your_midtrans_production_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_production_client_key
MIDTRANS_IS_PRODUCTION=true

# Application URLs
FRONTEND_URL=https://your-app-name.vercel.app

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Email Configuration (Optional)
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Raffle Platform

# Raffle Configuration
MAX_RAFFLE_DURATION_DAYS=90
MIN_TICKET_PRICE=1000
MAX_TICKET_PRICE=10000000
MAX_TICKETS_PER_RAFFLE=100000

# Monitoring & Analytics (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# CORS Configuration
CORS_ORIGIN=https://your-app-name.vercel.app

# Session Configuration
SESSION_SECRET=your_session_secret_for_production

# Redis Configuration (if using Redis for caching)
REDIS_URL=your_redis_connection_string

# Webhook URLs
WEBHOOK_SECRET=your_webhook_secret_for_verification

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Database Connection Pool (if needed)
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Rate Limiting per User
USER_RATE_LIMIT_WINDOW_MS=900000
USER_RATE_LIMIT_MAX_REQUESTS=50

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_WHATSAPP=+6281234567890

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Platform sedang dalam maintenance. Silakan coba lagi nanti.

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# SSL Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Content Security Policy
CSP_ENABLED=true

# File Storage (if using external storage)
STORAGE_PROVIDER=supabase
STORAGE_BUCKET=raffle-uploads

# Notification Queues (if using background jobs)
QUEUE_PROVIDER=memory
QUEUE_REDIS_URL=your_redis_url_for_queues

# Analytics & Tracking
TRACK_USER_EVENTS=true
TRACK_PAYMENT_EVENTS=true
TRACK_RAFFLE_EVENTS=true

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# Localization
DEFAULT_LOCALE=id
SUPPORTED_LOCALES=id,en

# Time Zone
DEFAULT_TIMEZONE=Asia/Jakarta

# Currency
DEFAULT_CURRENCY=IDR

# Social Media Integration (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_API_KEY=your_twitter_api_key
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# SEO Configuration
SITE_NAME=Platform Undian Digital
SITE_DESCRIPTION=Platform undian digital terpercaya dengan sistem yang aman dan transparan
SITE_KEYWORDS=undian,raffle,hadiah,digital,platform
SITE_URL=https://your-app-name.vercel.app

# Contact Information
CONTACT_EMAIL=support@your-domain.com
CONTACT_PHONE=+6281234567890
CONTACT_ADDRESS=Jakarta, Indonesia

# Legal
TERMS_URL=https://your-app-name.vercel.app/terms
PRIVACY_URL=https://your-app-name.vercel.app/privacy

# Support
SUPPORT_URL=https://your-app-name.vercel.app/support
FAQ_URL=https://your-app-name.vercel.app/faq

# Version
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Deployment
DEPLOYMENT_ENV=production
DEPLOYMENT_DATE=2024-01-01
DEPLOYMENT_COMMIT=main